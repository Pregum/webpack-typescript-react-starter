{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "lib": ["ES2018", "DOM"],
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}